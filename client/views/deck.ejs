                        <h2 id="due-cards"></h2>
                    </div>
                </div>
                <div class="buttons-container">
                    <a href="/edit/<%= name %>" id="edit-cards">Add / Edit</a>
                    <a href="/review/<%= name %>" id="review-cards">Review Cards</a>
                </div>
            </div>
        </div>
    </div>
